{
	"extends": "google",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"max-len": [
			"error",
			{
				"code": 80,
				"ignoreComments": true,
				"tabWidth": 2,
				"ignorePattern": "^\\s*import\\s.+$"
			}
		],
		"curly": [2, "multi-or-nest"]
	}
}
